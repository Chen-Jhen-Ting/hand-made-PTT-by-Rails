<h1>看板</h1>


<%= link_to '新增看板', new_board_path%>
<table>
    <thead>
        <tr>
            <th>主題</th>
            <th>解說</th>
            <th>狀態</th>
            <th>刪除時間</th>
            <th>更新時間</th>
            <th>操作選項</th>
        </tr>
    </thead>
    <tbody>
        <% @boards.each do |board| %>
        <tr>
            <td><%= link_to board.title, board_path(board) %></td>
            <td><%=board.intro %></td>
            <td><%=board.state %></td>
            <td><%=board.deleted_at %></td>
            <td><%=board.updated_at %></td>
            <td><%= link_to '編輯', edit_board_path(board)%></td>
            <td><%= link_to '刪除',  
            board_path(board),method: 'delete', data:{confirm: 'Are you sure?'} %></td>
        </tr>
        <% end %>
    </tbody>
</table>