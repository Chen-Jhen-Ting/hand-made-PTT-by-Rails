<h2>會員登入</h2>

<%= form_for(@user, url: login_users_path) do |form| %>

    <div>
        <%= form.label :account,'帳號' %>
        <%= form.text_field :account, placeholder: '請輸入帳號或信箱' %>
    </div>

    <div>
        <%= form.label :password, '密碼'%>
        <%= form.text_field :password %>
    </div>

    <%= form.submit '登入' %>
<% end %>