<section class="post">
<ul class="header">
  <li>
    <div>
      <span>作者</span>
      <span><%= @post.user.try(:account) %></span>
    </div>
    <div>
      <span>看板</span>
      <span><%= @post.board.title %></span>
    </div>
  </li>
  <li>
    <span>標題</span>
    <span><%= @post.title %></span>
  </li>
  <li>
    <span>時間</span>
    <span><%= @post.created_at %></span>
  </li>
</ul>
<hr>


<%= @post.content %><br>
<%= @post.hi %><br>
<%= image_tag @post.photo.variant(resize_to_limit: [400, 400]) if @post.photo.attached?%>
                        <%#  等比例壓縮，最大的長度會在 resize_to_limit 的範圍內 %>

 <%= form_for(@comment, url: post_comments_path(@post), local: true) do |form| %>
 <%= form.text_field :content %>
 <%= form.submit "送出" %>
<% end %>
<hr>
<ul>
<% @comments.each do |comment| %>
  <li><%= comment.content %></li>
<% end %>
</ul>
</section>